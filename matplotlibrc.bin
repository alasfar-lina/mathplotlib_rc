#for mac
#backend            : MacOSX
backend:  TkAgg
font.family      : serif
font.size        : 20.0
mathtext.fontset : stix

text.usetex         : True
#text.latex.unicode  : False
#text.latex.preamble: [\usepackage{amsmath},\usepackage{hepunits},\usepackage{mathpazo}]



figure.figsize    : 7, 6
figure.subplot.left    : 0.20
figure.subplot.right   : 0.90
figure.subplot.bottom  : 0.16
figure.subplot.top     : 0.90


axes.xmargin: 0
axes.ymargin: 0.05
axes.labelsize: 24
xtick.labelsize:22
xtick.major.size: 8
xtick.minor.size: 4
ytick.labelsize:22
ytick.major.size:8
ytick.minor.size: 4
lines.markersize:4
xtick.minor.bottom:True
xtick.direction: in
ytick.direction: in
xtick.top: True
ytick.right: True

legend.numpoints     : 1
legend.fontsize      : 24
legend.borderpad     : 0.3
legend.handlelength  : 1.5
legend.handletextpad : 0.1
legend.frameon       : False
legend.scatterpoints : 3



savefig.facecolor: ff000000 # make figure patch transparent
